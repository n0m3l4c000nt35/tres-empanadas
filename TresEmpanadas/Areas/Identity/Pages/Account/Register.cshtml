@page
@model RegisterModel
@{
    ViewData["Title"] = "Registrarse";
    Layout = "/Pages/Shared/_Layout.cshtml";
}

<style>
    .accent-violet {
        color: #7c3aed;
    }
    .btn-violet {
        background: #7c3aed;
        color: #fff !important;
        border: 2px solid #7c3aed;
        font-weight: 600;
        transition: background 0.2s, color 0.2s;
    }
    .btn-violet:hover, .btn-violet:focus {
        background: transparent;
        color: #7c3aed !important;
        border: 2px solid #7c3aed;
    }
    .btn-outline-violet {
        background: transparent;
        color: #7c3aed !important;
        border: 2px solid #7c3aed;
        font-weight: 600;
        transition: background 0.2s, color 0.2s;
    }
    .btn-outline-violet:hover, .btn-outline-violet:focus {
        background: #7c3aed;
        color: #fff !important;
        border-color: #7c3aed;
    }
    .card-violet {
        background: #23213b;
        border: none;
        border-radius: 0.75rem;
        box-shadow: 0 2px 16px 0 rgba(124,58,237,0.10);
    }
    .section-title-violet {
        color: #7c3aed;
        font-weight: 700;
        letter-spacing: 1px;
    }
</style>

<div class="modern-font" style="min-height: 100vh; padding-top: 4rem;">
    <div class="container d-flex justify-content-center align-items-center" style="min-height: 80vh;">
        <div class="card card-violet shadow-lg p-4" style="max-width: 400px; width: 100%;">
            <div class="text-center mb-4">
                <i class="bi bi-person-plus" style="font-size: 2.5rem; color: #7c3aed;" aria-hidden="true"></i>
                <h2 class="section-title-violet mt-2 mb-0" id="register-title">Registrarse</h2>
                <p class="text-muted mb-0" id="register-desc">Creá tu cuenta</p>
            </div>
            <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post" aria-labelledby="register-title" aria-describedby="register-desc">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>
                <div class="mb-3">
                    <label asp-for="Input.Email" class="form-label accent-violet" for="Input_Email"></label>
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" aria-label="Correo electrónico" id="Input_Email" autofocus />
                    <span asp-validation-for="Input.Email" class="text-danger" role="alert"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Input.Password" class="form-label accent-violet" for="Input_Password"></label>
                    <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" aria-label="Contraseña" id="Input_Password" />
                    <span asp-validation-for="Input.Password" class="text-danger" role="alert"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Input.ConfirmPassword" class="form-label accent-violet" for="Input_ConfirmPassword"></label>
                    <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" aria-label="Confirmar contraseña" id="Input_ConfirmPassword" />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger" role="alert"></span>
                </div>
                <button id="registerSubmit" type="submit" class="btn btn-violet w-100 mb-2" aria-label="Registrarse">Registrarse</button>
                <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl" class="btn btn-outline-violet w-100 mb-2" aria-label="¿Ya tenés cuenta? Iniciá sesión">¿Ya tenés cuenta? Iniciá sesión</a>
            </form>
            @if ((Model.ExternalLogins?.Count ?? 0) > 0)
            {
                <hr />
                <div class="text-center mb-2">
                    <span class="section-title-violet" style="font-size:1.1rem;">O registrate con</span>
                </div>
                <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" aria-label="Registro externo">
                    <div class="d-flex flex-column gap-2">
                        @foreach (var provider in Model.ExternalLogins!)
                        {
                            <button type="submit" class="btn btn-outline-violet" name="provider" value="@provider.Name" title="Registrarse con @provider.DisplayName" aria-label="Registrarse con @provider.DisplayName">
                                @provider.DisplayName
                            </button>
                        }
                    </div>
                </form>
            }
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
