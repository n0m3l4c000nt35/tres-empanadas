@page
@model ErrorModel
@{
    ViewData["Title"] = "Oops! Something went wrong";
    Layout = "_Layout";
}

<div class="d-flex flex-column align-items-center justify-content-center min-vh-100 bg-light">
    <div class="card shadow-lg border-0" style="max-width: 400px;">
        <div class="card-body text-center">
            <svg xmlns="http://www.w3.org/2000/svg" width="64" height="64" fill="#dc3545" class="mb-3" viewBox="0 0 16 16">
                <path d="M8.982 1.566a1.5 1.5 0 0 0-2.964 0l-6.857 12.5A1.5 1.5 0 0 0 1.5 16h13a1.5 1.5 0 0 0 1.339-2.434l-6.857-12.5zM8 5c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995A.905.905 0 0 1 8 5zm.002 6a1 1 0 1 1-2.002 0 1 1 0 0 1 2.002 0z"/>
            </svg>
            <h1 class="h4 text-danger mb-2">Oops! Something went wrong</h1>
            <p class="mb-3 text-secondary">
                We're sorry, but an unexpected error has occurred.<br>
                Please try again later or return to the <a href="/">home page</a>.
            </p>
            @if (Model.ShowRequestId)
            {
                <p class="small text-muted">
                    <strong>Request ID:</strong> <code>@Model.RequestId</code>
                </p>
            }
            <a href="/" class="btn btn-primary mt-2">Go to Home</a>
        </div>
    </div>
</div>
